<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".carsell.bookcar">

    <android.support.v7.widget.Toolbar
        android:id="@+id/toolbar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">
        <ImageButton
            android:id="@+id/aerrow"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:src="@drawable/ic_baseline_arrow_back_24"
            android:scaleType="centerCrop"
            android:background="@color/white"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Mersedes Benz"
            android:layout_marginStart="80dp"
            android:textColor="@color/black"
            android:textStyle="bold"
            android:textSize="25dp"/>
        <ImageButton
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:src="@drawable/menu"
            android:scaleType="centerCrop"
            android:layout_marginStart="60dp"
            android:background="@color/black"
            />
    </android.support.v7.widget.Toolbar>

    <ImageView
        android:id="@+id/lemorghini"
        android:layout_width="match_parent"
        android:scaleType="centerCrop"
        android:layout_height="wrap_content"
        android:src="@drawable/car1"
        android:layout_below="@id/toolbar"/>

    <androidx.cardview.widget.CardView
        android:id="@+id/trans"
        android:layout_width="wrap_content"
        android:layout_marginLeft="20dp"
        app:cardCornerRadius="10dp"
        android:layout_marginTop="20dp"
        android:padding="100dp"
        android:layout_below="@id/lemorghini"
        android:layout_height="wrap_content">
        <ImageView
            android:layout_width="40dp"
            android:scaleType="centerCrop"
            android:layout_marginLeft="160dp"
            android:layout_marginBottom="30dp"
            android:layout_height="40dp"
            android:src="@drawable/logo"/>

        <ImageView
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="50dp"
            android:scaleType="centerCrop"
            android:src="@drawable/range"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="328 ml"
            android:layout_marginLeft="17dp"

            android:textColor="@color/black"
            android:layout_marginTop="75dp"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="95dp"
            android:layout_marginLeft="20dp"

            android:text="Range"/>

        <ImageView
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_marginLeft="170dp"
            android:scaleType="centerCrop"
            android:layout_marginTop="40dp"
            android:src="@drawable/fast"
            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="328 ml"
            android:textColor="@color/black"
            android:layout_marginLeft="160dp"

            android:layout_marginTop="75dp"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="150dp"
            android:layout_marginTop="95dp"
            android:text="Top speed"/>

        <ImageView
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:scaleType="centerCrop"
            android:layout_marginLeft="320dp"
            android:layout_marginTop="40dp"
            android:src="@drawable/clock"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="320dp"
            android:layout_marginTop="75dp"
             android:textColor="@color/black"
            android:text="4.4 s"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="310dp"
            android:layout_marginTop="95dp"
            android:text="0-60mph"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="130dp"

            android:text="-----------------------------------------------------------------------------------------------------"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="150dp"
            android:textColor="@color/black"
            android:text="Transmission"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="150dp"
            android:layout_marginLeft="310dp"
            android:textColor="@color/black"
            android:text="Automatic"/>
    </androidx.cardview.widget.CardView>


    <androidx.cardview.widget.CardView
        android:id="@+id/activity"
        android:layout_width="150dp"
        android:layout_below="@id/trans"
        android:layout_marginTop="30dp"
        android:layout_marginLeft="20dp"
        app:cardCornerRadius="10dp"
        android:layout_height="150dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Activity"
            android:layout_marginLeft="20dp"
            android:textColor="@color/black"/>

         <ImageView
             android:layout_width="20dp"
             android:layout_height="20dp"
             android:src="@drawable/next"
             android:scaleType="centerCrop"
             android:layout_marginLeft="120dp"/>

        <Button
            android:layout_width="25dp"
            android:background="@color/teal_200"
            android:layout_height="25dp"
            android:layout_marginTop="50dp"
            android:layout_marginLeft="20dp"
            android:text="-8%"
            android:textColor="@color/white"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="145 mph"
            android:layout_marginTop="100dp"
            android:textSize="20dp"
            android:layout_marginLeft="20dp"
            android:textColor="@color/black"/>
           <TextView
               android:layout_width="wrap_content"
               android:layout_height="wrap_content"
               android:text="Treaveled last month"
               android:textSize="10sp"
               android:layout_marginLeft="20dp"
               android:layout_marginTop="130dp"/>
    </androidx.cardview.widget.CardView>

    <androidx.cardview.widget.CardView
        android:layout_width="150dp"
        app:cardCornerRadius="10dp"
        android:layout_height="150dp"
        android:layout_toRightOf="@id/activity"
        android:layout_marginLeft="30dp"
        android:layout_marginTop="30dp"
        android:layout_below="@id/trans">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="gas volume "
            android:textColor="@color/black"
            android:layout_marginLeft="20dp"/>
        <ImageView
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:scaleType="centerCrop"
            android:layout_marginTop="60dp"
            android:layout_marginLeft="30dp"
            android:src="@drawable/gas_can"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="63%"
            android:layout_marginTop="100dp"
            android:textColor="@color/black"
            android:textSize="20dp"
            android:layout_marginLeft="30dp"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="i can't drive 178 miles"
            android:textSize="10dp"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="120dp"/>

    </androidx.cardview.widget.CardView>
    <androidx.cardview.widget.CardView
        android:id="@+id/details"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="30dp"
        app:cardCornerRadius="10dp"
        android:layout_marginLeft="20dp"
        android:layout_below="@id/activity">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="10dp"
            android:text="Details"
            android:textColor="@color/black" />
        <ImageView
            android:layout_width="30dp"
            android:layout_marginLeft="120dp"
            android:src="@drawable/next"
            android:scaleType="centerCrop"
            android:layout_height="30dp"/>

    </androidx.cardview.widget.CardView>
    <androidx.cardview.widget.CardView
        android:id="@+id/coustmize"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="30dp"
        android:layout_toRightOf="@id/details"
        app:cardCornerRadius="10dp"
        android:layout_marginLeft="20dp"
        android:layout_below="@id/activity">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="coustmize"
            android:textColor="@color/black"
            android:layout_marginTop="6dp"
            android:layout_marginLeft="20dp"/>
        <ImageView
            android:layout_width="30dp"
            android:layout_marginLeft="120dp"
            android:src="@drawable/next"
            android:scaleType="centerCrop"
            android:layout_height="30dp"/>

    </androidx.cardview.widget.CardView>

    <androidx.cardview.widget.CardView
        android:layout_width="wrap_content"
        android:backgroundTint="@color/black"
        android:layout_marginLeft="20dp"
        android:layout_below="@id/details"
        app:cardCornerRadius="10dp"
        android:padding="50dp"
        android:layout_marginTop="30dp"
        android:layout_height="wrap_content">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="5dp"
            android:textColor="@color/white"
            android:text="Booking car"/>

        <TextView
            android:layout_width="90dp"
            android:layout_height="wrap_content"
            android:text="$750/month"
            android:padding="5dp"
            android:textColor="@color/white"
            android:layout_marginLeft="290dp"/>


    </androidx.cardview.widget.CardView>

</RelativeLayout>